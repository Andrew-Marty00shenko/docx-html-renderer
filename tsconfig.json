{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "noEmit": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "configs/**/*"],
  "exclude": ["node_modules"]
}
